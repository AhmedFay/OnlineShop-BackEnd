    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DoVote</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UniqueName)
